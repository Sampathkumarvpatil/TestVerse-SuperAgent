/* ==============================
   AI TESTVERSE SUPERAGENT — Enlarged & Spaced UI
   ============================== */

/* Headline */
QLabel#titleLabel {
    font-size: 36px;
    font-weight: bold;
    color: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0   #FF8A00,
        stop:0.5 #E52E71,
        stop:1   #9B2C7A
    );
    padding: 16px;
}

/* Settings button */
QPushButton#settingsButton {
    background: transparent;
    color: #FFFFFF;
    border: none;
    font-size: 24px;
    padding: 4px 12px;
}
QPushButton#settingsButton:hover {
    background-color: rgba(255,255,255,0.1);
}

/* Terminal container */
QFrame#terminal {
    background-color: #1a1a1a;
    border-radius: 8px;
    margin: 12px;
    padding-top: 8px;
}

/* Traffic‑light dots */
QFrame#btn-red, QFrame#btn-yellow, QFrame#btn-green {
    width: 16px; height: 16px;
    margin: 0 4px;
    border-radius: 8px;
}

/* Log area */
QPlainTextEdit#terminalBody {
    background-color: #1a1a1a;
    color: #00ff00;
    font-family: 'JetBrains Mono', monospace;
    font-size: 14px;
    padding: 12px;
    border: none;
    selection-background-color: #004400;
}

/* Note */
QLabel#noteLabel {
    color: #CCCCCC;
    font-size: 11px;
    font-style: italic;
    padding: 6px 16px;
}

/* Input line */
QFrame#inputLine {
    background-color: #1a1a1a;
    border-top: 1px solid #333;
    margin: 8px 0;
}
QLabel#promptLabel {
    color: #00ff00;
    font-family: 'JetBrains Mono', monospace;
    font-size: 18px;
    padding: 0 8px;
}
QPlainTextEdit#terminalInput {
    background: transparent;
    border: none;
    color: #00ff00;
    font-family: 'JetBrains Mono', monospace;
    font-size: 18px;
    padding: 12px;
    min-height: 60px;
    max-height: 100px;
    line-height: 1.3;
}
QPlainTextEdit#terminalInput QScrollBar:vertical {
    background: transparent;
    width: 8px;
}
QPlainTextEdit#terminalInput QScrollBar::handle:vertical {
    background: #00ff00;
    border-radius: 4px;
    min-height: 20px;
}

/* Shared 3D gradient for Run/Stop */
QPushButton#primaryButton {
    background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
        stop:0   #FF8A00,
        stop:0.5 #E52E71,
        stop:1   #9B2C7A
    );
    border-top:    2px solid rgba(255,255,255,0.25);
    border-bottom: 4px solid rgba(0,0,0,0.60);
    border-radius: 10px;
    color: white;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: bold;
    margin: 0 16px 16px 16px;
    min-width: 140px;
}
QPushButton#primaryButton:hover {
    background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
        stop:0   #FF9A33,
        stop:0.5 #F34E81,
        stop:1   #AB3C8C
    );
}
QPushButton#primaryButton:pressed {
    padding-top:    18px;
    padding-bottom: 14px;
    border-top:    4px solid rgba(0,0,0,0.60);
    border-bottom: 2px solid rgba(255,255,255,0.25);
}
QPushButton#primaryButton:disabled {
    background-color: #444;
    border-top:    2px solid rgba(255,255,255,0.15);
    border-bottom: 4px solid rgba(0,0,0,0.40);
    color: #888;
}

/* Settings Dialog */
QDialog#settingsDialog {
    background-color: #222233;
    border-radius: 8px;
    padding: 16px;
}
QLabel#settingsTitle {
    font-size: 18px;
    font-weight: bold;
    color: #FFFFFF;
    margin-bottom: 12px;
}
QLineEdit#settingsLineEdit {
    background-color: #333444;
    border: 1px solid #555;
    border-radius: 4px;
    color: #FFFFFF;
    padding: 10px;
    font-size: 16px;
    margin-bottom: 16px;
}
QPushButton#settingsSaveButton {
    background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
        stop:0 #89B4FA,
        stop:1 #CBA6F7
    );
    color: #1a1a1a;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: bold;
    min-width: 100px;
}
QPushButton#settingsCancelButton {
    background-color: #444;
    color: #DDD;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: bold;
    min-width: 100px;
}
QPushButton#settingsSaveButton:hover {
    background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
        stop:0 #74C7EC,
        stop:1 #B4BEFE
    );
}
QPushButton#settingsCancelButton:hover {
    background-color: #555;
}
/* Export button — black text so it’s visible on a light header */
QPushButton#exportButton {
    background: transparent;
    color: #000000;              /* ← black */
    border: none;
    font-size: 16px;
    padding: 4px 12px;
}
QPushButton#exportButton:hover {
    background-color: rgba(0,0,0,0.05);   /* subtle hover shadow */
}


